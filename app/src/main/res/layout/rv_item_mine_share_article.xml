<?xml version="1.0" encoding="utf-8"?>
<per.goweii.wanandroid.widget.NestedSwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:drag_edge="right"
    app:show_mode="lay_down">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/accent"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="删除"
            android:textColor="@color/text_invert"
            android:textSize="@dimen/text_content" />

    </LinearLayout>

    <include layout="@layout/rv_item_article" />

</per.goweii.wanandroid.widget.NestedSwipeLayout>